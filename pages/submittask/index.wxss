.content {
    display: block;
    width: 100%;
    height: 93%;
    position: absolute;
    top: 0rpx;
}

.content text {
    color: #666;
    font-size: 24rpx;
    margin-top: 30rpx;
}

.v-step {
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: white;
    padding-left: 30rpx;
    padding-top: 30rpx;
}

.v-image {
    width: 100%;
    margin-top: 20rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.v-image image {
    width: 120rpx;
    height: 120rpx;
    margin-left: 20rpx;
    border: 1px solid;
}

.v-action {
    position: fixed;
    width: 100%;
    height: 7%;
    line-height: 90rpx;
    text-align: center;
    font-size: 30rpx;
    color: white;
    bottom: 0rpx;
    background-color: #7aa42d;
}