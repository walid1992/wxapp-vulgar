.v-root {
    height: 1334rpx;
    width: 100%;
}

.sv-box {
    display: block;
    height: 100%;
    font-family: Helvetica, Arial, "Hiragino Sans GB", "Source Han Sans CN", "PingFang SC", Roboto, "微软雅黑", "Heiti SC", "Microsoft Yahei", sans-serif
}

.v-top {
    height: 120rpx;
    width: 100%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    display: flex;
    background-color: white;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.v-toptip {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
    flex-direction: column;
}

.tv-toptip-title {
    font-size: 24rpx;
    color: #999;
}

.tv-toptip-value {
    font-size: 36rpx;
    color: red;
}

.v-divider {
    background-color: #b2b2b2;
    width: 1px;
    height: 100%;
}

.list-plan {
    position: relative;
    background: white;
    width: 100%;
    height: 140rpx;
    border-bottom: 1px #dadada solid;
}

.list-plan image {
    width: 100rpx;
    height: 100rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
}

.list-plan .tv-task-name {
    position: absolute;
    top: 20rpx;
    left: 120rpx;
    font-size: 32rpx;
    color: #333;
}

.list-plan .tv-money {
    position: absolute;
    font-size: 28rpx;
    bottom: 20rpx;
    left: 120rpx;
    color: #ff4444;
}

.list-plan .tv-residue-degree {
    position: absolute;
    font-size: 28rpx;
    bottom: 20rpx;
    left: 200rpx;
    color: #666;
}

.list-plan .tv-time {
    position: absolute;
    font-size: 24rpx;
    bottom: 20rpx;
    right: 20rpx;
    color: #999;
}
