.sv-box {
  display: block;
  width: 100%;
  height: 93%;
  position: absolute;
  top: 0rpx;
}

.v-top {
  width: 100%;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.v-top .tv-task-name {
  color: #333;
  max-width: 70%;
  line-height: 60rpx;
  font-size: 46rpx;
  font-style: italic;
}

.v-top .tv-desc {
  color: #666;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.v-top .tv-commission {
  position: absolute;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  top: 60rpx;
  right: 0;
  text-align: center;
  color: white;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  font-size: 40rpx;
  background-color: #7aa42d;
}

.v-middle {
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.v-middle text {
  color: #666;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.v-step {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  padding-left: 30rpx;
  padding-top: 30rpx;
}

.v-step-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 30rpx;
}

.v-step-list .tv-number {
  color: #666;
  font-size: 30rpx;
  font-weight: bold;
}

.v-step-list .tv-content {
  color: #666;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 30rpx;
}

.v-step-list .v-image {
  width: 100%;
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.v-step-list .v-image image {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
}

.v-action {
  position: fixed;
  width: 100%;
  height: 7%;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: white;
  bottom: 0rpx;
  background-color: #7aa42d;
}