.v-root {
    height: 1334rpx;
    width: 100%;
    background-color: #f0f0f0;
}

.sv-box {
    display: block;
    height: 100%;
}

.v-top {
    width: 100%;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    background-color: white;
}

.v-top .tv-task-name {
    color: #333;
    max-width: 70%;
    line-height: 60rpx;
    font-size: 46rpx;
    font-style: italic;
}

.v-top .tv-desc {
    color: #666;
    font-size: 30rpx;
    margin-top: 20rpx;
}

.v-top .tv-commission {
    position: absolute;
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    top: 80rpx;
    right: 0;
    text-align: center;
    color: white;
    border-top-left-radius: 30rpx;
    border-bottom-left-radius: 30rpx;
    font-size: 40rpx;
    background-color: #7aa42d;
}

.v-middle {
    width: 100%;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    background-color: white;
}

.v-middle text {
    color: #666;
    font-size: 24rpx;
    margin-top: 30rpx;
}

.v-step {
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: white;
}

.v-step text {
    color: #666;
    width: 100%;
    font-size: 24rpx;
    line-height: 80rpx;
    margin-left: 30rpx;
    background-color: white;
}
