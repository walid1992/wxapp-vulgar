<import src="../../template/wec-empty/index.wxml" />

<!-- loading -->
<loading hidden="{{hidden}}">
    加载中...
</loading>

<view class="v-top">

    <view class="v-toptip">
        <text class="tv-toptip-title">当前余额</text>
        <text class="tv-toptip-value">30.00 元</text>
    </view>

    <view class="v-divider" />

    <view class="v-toptip">
        <text class="tv-toptip-title">累计收益</text>
        <text class="tv-toptip-value">30.00 元</text>
    </view>

</view>

<view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'swiper-select' : ''}}" data-current="0" bindtap="swichNav">客户订单</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'swiper-select' : ''}}" data-current="1" bindtap="swichNav">销售跟踪</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'swiper-select' : ''}}" data-current="2" bindtap="swichNav">受邀伙伴</view>
</view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">

    <!-- 客户订单 -->
    <swiper-item>
        <scroll-view class="hot-box" scroll-y="true" upper-threshold="50" lower-threshold="100" bindscrolltolower="scrolltolower">
            <template wx:if="{{datalist.length <= 0}}" is="wxc-empty" />
        </scroll-view>
    </swiper-item>

    <!-- 销售跟踪 -->
    <swiper-item>
        <scroll-view class="hot-box" scroll-y="true" upper-threshold="50" lower-threshold="100" bindscrolltolower="scrolltolower">
            <!-- tip -->
            <view style="text-align:center;width:100%;height:80rpx;line-height:80rpx;color:#999999;font-size:28rpx;">销售不跟踪，到头一场空，这里是查看但为下单的用户</view>

            <!-- content -->
            <!-- <view wx:for="{{datalist}}" wx:for-item="item" wx:for-index="i">
                    <view class="hot-box-top">
                        <text class="hot-box-title">{{datalist[i].dateDay}}</text>
                    </view>
                    <view wx:for="{{datalist[i].stories}}" wx:for-index="j" wx:for-item="items">
                        <navigator id="{{datalist[i].stories[j].id}}" url="../detail/detail?id={{datalist[i].stories[j].id}}">
                            <view class="list-box">
                                <view class="list-box-title">{{datalist[i].stories[j].title}}</view>
                                <view class="list-box-sub">知乎日报</view>
                            </view>
                        </navigator>
                    </view>
                </view> -->

            <!-- empty -->
            <template wx:if="{{datalist.length <= 0}}" is="wxc-empty" data="{{id}}" />

            <!-- 没有更多的时候 -->
            <view hidden="{{hotshidden}}" class="hot-box-more">
                <view wx:if="{{hothidden}}">
                    <image src="/static/loading.gif" mode="aspectFill" />
                </view>
                <view wx:else>
                    <text> 没有更多了 </text>
                </view>
            </view>

        </scroll-view>
    </swiper-item>

    <!-- 受邀伙伴 -->
    <swiper-item>
        <scroll-view class="hot-box" scroll-y="true" upper-threshold="50" lower-threshold="100" bindscrolltolower="scrolltolower">

            <!-- empty -->
            <template wx:if="{{datalist.length <= 0}}" is="wxc-empty" data="{{id}}" />

            <!-- 没有更多的时候 -->
            <view hidden="{{hotshidden}}" class="hot-box-more">
                <view wx:if="{{hothidden}}">
                    <image src="/static/loading.gif" mode="aspectFill" />
                </view>
                <view wx:else>
                    <text> 没有更多了 </text>
                </view>
            </view>

        </scroll-view>
    </swiper-item>

</swiper>
