.container {
  background-color: #f0f0f0;
}

.v-avatar {
  position: relative;
  display: flex;
  width: 100%;
  height: 188rpx;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #dadada;
  background-color: white;
}

.userinfo-avatar {
  position: absolute;
  right: 20rpx;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.weui_cell {
  position: relative;
  display: flex;
  width: 100%;
  height: 100rpx;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #dadada;
  background-color: white;
}

.tv-cell-left {
  position: absolute;
  font-size: 30rpx;
  color: #333;
  left: 20rpx;
}

.tv_cell_right {
  position: absolute;
  font-size: 28rpx;
  color: #999999;
  right: 50rpx;
}

.with_arrow {
  position: absolute;
  right: 30rpx;
  border-top: 2rpx solid #c7c7c7;
  border-right: 2rpx solid #c7c7c7;
  width: 16rpx;
  height: 16rpx;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}
